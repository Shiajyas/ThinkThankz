<%- include("../partials/adminHeader") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<!-- Axios CDN -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<!-- CSS -->
<style>
    /* Inline CSS for demonstration */
    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th, .table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
        padding-top: 30px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

    .dropdown-content button {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        border: none;
        background: none;
        width: 100%;
        text-align: left;
    }

    .dropdown-content button:hover {
        background-color: #f1f1f1;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>
</head>
<body>
    <h3>Return requests</h3>
    <table class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Product Name</th>
                <th>Reason</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% returnRequests.forEach(request => { %>
                <tr>
                    <td><%= request.userId.name %></td>
                    <td><%= request.productId.productName %></td>
                    <td>
                        <% if (request.reason.length > 50) { %>
                            <button type="button" class="btn btn-link" data-toggle="modal" data-target="#reasonModal<%= request._id %>">View Reason</button>
                            <!-- Modal -->
                            <div class="modal fade" id="reasonModal<%= request._id %>" tabindex="-1" role="dialog" aria-labelledby="reasonModalLabel<%= request._id %>" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="reasonModalLabel<%= request._id %>">Reason</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <%= request.reason %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <%= request.reason %>
                        <% } %>
                    </td>
                    <td><%= request.quantity %></td>
                    <td><%= request.status %></td>
                    <td>
                        <div class="dropdown">
                            <button class="button" style="border: none;">Actions</button>
                            <div class="dropdown-content">
                                <button class="approve-button" style="color: rgb(11, 87, 45);" onclick="handleApprove('<%= request._id %>')">Approve</button>
                                <button class="decline-button" style="color: red;" onclick="handleDecline('<%= request._id %>')">Decline</button>
                            </div>
                        </div>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    

<!-- Script -->
<script>
    // Function to handle approval
    function handleApprove(returnId) {
        axios.put(`/admin/returnRequests/approve/${returnId}`)
            .then(response => {
                Swal.fire({
                    icon: 'success',
                    title: 'Approved',
                    text: response.data.message,
                }).then(() => {
                    location.reload();
                });
            })
            .catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.response.data.message,
                });
            });
    }

    // Function to handle decline
    function handleDecline(returnId) {
        axios.put(`/admin/returnRequests/decline/${returnId}`)
            .then(response => {
                Swal.fire({
                    icon: 'success',
                    title: 'Declined',
                    text: response.data.message,
                }).then(() => {
                    location.reload();
                });
            })
            .catch(error => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.response.data.message,
                });
            });
    }
</script>

<%- include("../partials/adminFooter") %>